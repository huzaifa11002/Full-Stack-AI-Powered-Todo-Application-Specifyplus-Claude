# Database Configuration
# Get your connection string from Neon PostgreSQL dashboard (https://neon.tech)
# Format: postgresql://user:password@host.neon.tech/dbname?sslmode=require
DATABASE_URL=

# Better Auth Configuration (must match frontend)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
BETTER_AUTH_SECRET= 

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development

# OpenAI Configuration
# Get your API key from OpenAI dashboard (https://platform.openai.com/api-keys)
OPENAI_API_KEY=

GEMINI_API_KEY=

# AI Agent Configuration
# Model to use for the conversational agent (gpt-4o, gpt-4o-mini, gpt-3.5-turbo)
AGENT_MODEL=gpt-4o-mini
# Temperature controls randomness (0.0 = deterministic, 1.0 = creative)
AGENT_TEMPERATURE=0.7
# Maximum tokens in agent response
AGENT_MAX_TOKENS=1000
